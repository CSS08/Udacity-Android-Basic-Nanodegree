<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="com.example.cs.hotelgalexy.MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE">
    <ImageView
        android:id="@+id/img1"
        android:src="@drawable/hotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/img2"
        android:src="@drawable/location"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_below="@id/img1"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/img3"
        android:src="@drawable/phone"
        android:padding="8dp"
        android:layout_below="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/img4"
        android:padding="8dp"
        android:src="@drawable/planet"
        android:layout_below="@id/img3"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/textView" />
    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img2"
        android:layout_below="@id/img1"
        android:textColor="#424242"
        android:padding="8dp"
        android:textSize="17sp"
        android:text="113, Prabhat Colony Road, Prabhat Colony, Santacruz East, Mumbai, Maharashtra 400055"/>
    <TextView
        android:id="@+id/txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="022 6153 0530"
        android:textColor="#424242"
        android:layout_toRightOf="@id/img3"
        android:layout_below="@id/txt1"
        android:padding="8dp"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="http://www.hotelgalaxy.net"
        android:layout_toRightOf="@id/img4"
        android:textColor="#424242"
        android:layout_below="@id/txt2"
        android:padding="8dp"
        android:textSize="17sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt3"
        android:padding="8dp"
        android:textSize="17sp"
        android:textColor="#424242"
        android:text="The simple, colourful rooms have free Wi-Fi and TVs. Excellence Room Service."
        android:id="@+id/textView" />

</RelativeLayout>
</ScrollView>